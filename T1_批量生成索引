--导出指定表
SELECT
	concat(
		'alter table ',
		table_name,
		' ',
		'add ',

	IF (
		non_unique = 1,
		CASE upper(index_type)
	WHEN 'fulltext' THEN
		'fulltext index'
	WHEN 'spatial' THEN
		'spatial index'
	ELSE
		concat(
			'index ',
			index_name,
			' using ',
			index_type
		)
	END,

IF (
	upper(index_name) = 'primary',
	concat(
		'primary key using ',
		index_type
	),
	concat(
		'unique index ',
		index_name,
		' using ',
		index_type
	)
)
	),
	'(',
	group_concat(
		DISTINCT concat('', column_name, '')
		ORDER BY
			seq_in_index ASC SEPARATOR ', '
	),
	');'
	) AS 'show_add_indexes'
FROM
	information_schema.statistics
WHERE
	table_schema = 'realtime_rpt'
AND table_name = 'or_sd_saleorder_et'
AND upper(index_name) != 'primary'
GROUP BY
	table_name,
	index_name
ORDER BY
	table_name ASC,
	index_name ASC;
	
--导出执行库下的所有表
select
	concat(
		'alter table ',
		table_name,
		' ',
		'add ',

	if (
		non_unique = 1,
		case upper(index_type)
	when 'fulltext' then 'fulltext index'
	when 'spatial' then 'spatial index'
	else
		concat(
			'index ',
			index_name,
			' using ',
			index_type
		)
	end,

if (
	upper(index_name) = 'primary',
	concat(
		'primary key using ',
		index_type
	),
	concat(
		'unique index ',
		index_name,
		' using ',
		index_type
	)
)
	),
	'(',
	group_concat(
		distinct concat('', column_name, '')
		order by
			seq_in_index asc separator ', '
	),
	');'
	) as 'show_add_indexes'
from
	information_schema.statistics
where table_schema = 'hash_realtime'
and upper(index_name) !='primary'
group by table_name,index_name
order by table_name asc,index_name asc;
